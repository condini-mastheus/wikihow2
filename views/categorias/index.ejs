<%- include('../header') %>
<br />
<a class="btn btn-light" href="/categorias/nova">Nova</a>

<table class="table table-striped table-stripped table-hover">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% categorias.forEach(categoria => { %>
    <tr>
      <td>
        <a href="/publicacoes/categoria/<%= categoria.id %>">
          <%= categoria.categoria %>
        </a>
      </td>
      <td>
        <a class="btn btn-info" href="/categorias/editar/<%= categoria.id %>">Editar</a>
        <a class="btn btn-danger" href="/categorias/excluir/<%= categoria.id %>">Excluir</a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../footer') %>