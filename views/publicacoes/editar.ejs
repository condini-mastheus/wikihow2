<%- include('../header') %>
<form method="POST" action="/publicacoes/nova">
  <div class="form-group">
    <label for="titulo">Título</label>
    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Título" value="<%= publicacao.titulo %>" />
  </div>

  <div class="form-group">
    <label for="titulo">Conteúdo</label>
    <textarea class="form-control" name="conteudo" placeholder="Conteúdo"><%= publicacao.conteudo %></textarea>
  </div>

  <div class="form-group">
    <label for="categoria">Categoria</label>
    <select class="form-control" id="categoria" name="categoria">
      <% categorias.forEach(categoria => { %>
      <option value="<%= categoria.id %>" selected="<%= publicacao.categoria === categoria.id ? 'selected' : '' %>">
        <%= categoria.categoria %>
      </option>
      <% }) %>
    </select>
  </div>

  <button class="btn btn-success">Salvar</button>
</form>

<%- include('../footer') %>